<% provide :title, @user.name %>
<div class='row'>
  <aside class='col-md-2 info text-center'>
    <section class='user_info'>
      <p><%= gravatar_for @user %></p>
      <h3><%= @user.name %></h3>
    </section>
    <section class='learned'>
      <p>Learned: <%= @learneds.count %> words</p>
    </section>
    <section class='stats'>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-10 primary">
    <div class=row>
      <div class="col-md-8 col-md-offset-2">
        <%= render 'follow_form' if logged_in? %>
        <h2 class="line">Activities</h2>
        <section class="activities">
          <ul class="list-unstyled">
            <%= render 'shared/activities' %>
          </ul>
          <%= will_paginate @activities %>
        </section>
      </div>
    </div>  
  </div>
</div>