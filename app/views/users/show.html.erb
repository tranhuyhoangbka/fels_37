<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-2 info text-center">
    <section class="user_info">          
      <p><%= gravatar_for @user %></p>
      <h3><%= @user.name %></h3>      
    </section>    
    <section class="learned">
      <p>Learned: <%= @learneds.count %> words</p>
    </section>
  </aside>  
</div>